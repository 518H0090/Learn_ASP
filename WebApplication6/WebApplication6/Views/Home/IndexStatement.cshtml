@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>IndexStatement</title>
</head>
<body>

	@{
		int a = 10;
		int b = 0;
	}

	@if (a > 5)
	{
		a++;
		<h1>Điều kiện đúng và giá trị = @a</h1>
	}
	else
	{
		<h2>Điều kiện sai</h2>
	}

	<h1>Ternary - @(a > 10 ? b = 10 : b = 5)</h1>

	<h1>Value of B is @b</h1>

	@{
		int valueSwitch = 3;
	}

	@switch (valueSwitch)
	{
		case 1:
			<h1>Case 1</h1>
			break;
		case 2:
			<h1>Case 2</h1>
			break;
		case 3:
			<h1>Case 3</h1>
			break;
		case 4:
			<h1>Case 4</h1>
			break;
		default:
			<h1>Default</h1>
			break;
	}


</body>
</html>
